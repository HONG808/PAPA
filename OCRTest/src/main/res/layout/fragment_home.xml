<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/textView_name_data1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:text="질병 관리 본부"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_data1"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView_name_data1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_background"
        android:textSize="10pt"
        android:text = "당뇨병에는 빵, 떡, 국수 등의 탄수화물 위주의 식단을 삼가해야 합니다."
        android:scrollbars = "vertical"
        />

    <TextView
        android:id="@+id/textView_name_data2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="생활 건강 지식"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_data2"
        android:layout_width="300dp"
        android:layout_height="172dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/round_background"
        android:textSize="10pt"
        android:text = "과도한 카페인 섭취는 건강에 해롭습니다."
        android:scrollbars = "vertical"
        />

    <Button
        android:id="@+id/M_Search_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/Prescription_Camera"
        android:background="@color/colorPrimaryDark"
        android:text="약물 검색"
        android:textColor="#FFFFFFFF"
        android:textSize="17dp" />

    <Button
        android:id="@+id/Prescription_Camera"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark"
        android:text="처방전 등록"
        android:textColor="#FFFFFFFF"
        android:textSize="17dp" />
    <!--두 버튼은 각각 하나는 사진, 하나는 검색 파트로 넘어간다-->
    <Button
        android:id="@+id/AlarmBtn"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/MypageBtn"
        android:background="@color/colorPrimaryDark"
        android:text="알람"
        android:textColor="#FFFFFFFF"
        android:textSize="17dp" />

    <Button
        android:id="@+id/MypageBtn"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimaryDark"
        android:text="마이페이지"
        android:textColor="#FFFFFFFF"
        android:textSize="17dp" />

    <Button
        android:id="@+id/Recycle_Btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop = "5dp"
        android:background= "@drawable/refresh"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />

</RelativeLayout>